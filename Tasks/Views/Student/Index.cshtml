@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-success mb-3">Create Student</a>

<table style="width:100%" class="table table-hover table-bordered align-middle text-center">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th colspan=3>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student s in Model)
        {
            <tr asp-action="Display" asp-route-id="@s.Id">
                <td>@s.Name</td>
                <td>@s.Age</td>
                @*<td>@s.Department.Name</td>*@
                <td>@s.Email</td>
                <td><a asp-action="Display" asp-route-id="@s.Id" class="btn btn-secondary">Display</a></td>
                <td><a asp-action="Update" asp-route-id="@s.Id" class="btn btn-info">Update</a></td>
                <td><a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
